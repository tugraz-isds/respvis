{
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["ES2015", "ES2019.Array", "DOM"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "package",
    "declaration": true,
    "declarationDir": "types",
    "paths": {
      "respvis-core": ["./src/lib/respvis-core"],
      "respvis-core/*": ["./src/lib/respvis-core/*"]
    }
  },
  "include": ["src/**/*", "module-specs.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/storybook/**/*"]
}
