{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["ES2015", "ES2019.Array", "DOM"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "package",
    "declaration": true,
    "declarationDir": "types",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "respvis-core": ["./src/packages/respvis-core/ts"],
      "respvis-core/*": ["./src/packages/respvis-core/ts/*"],
      "respvis-bar": ["./src/packages/respvis-bar/ts"],
      "respvis-bar/*": ["./src/packages/respvis-bar/ts/*"],
      "respvis-cartesian": ["./src/packages/respvis-cartesian/ts"],
      "respvis-cartesian/*": ["./src/packages/respvis-cartesian/ts/*"],
      "respvis-line": ["./src/packages/respvis-line/ts"],
      "respvis-line/*": ["./src/packages/respvis-line/ts/*"],
      "respvis-parcoord": ["./src/packages/respvis-parcoord/ts"],
      "respvis-parcoord/*": ["./src/packages/respvis-parcoord/ts/*"],
      "respvis-point": ["./src/packages/respvis-point/ts"],
      "respvis-point/*": ["./src/packages/respvis-point/ts/*"],
      "respvis-tooltip": ["./src/packages/respvis-tooltip/ts"],
      "respvis-tooltip/*": ["./src/packages/respvis-tooltip/ts/*"]
    }
  },
  "include": [
    "src/**/*",
    "declarations/*.d.ts"
  ],
  "exclude": ["node_modules", "src/storybook/**/*", "**/package"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
