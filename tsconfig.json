{
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["ES2015", "ES2019.Array", "DOM"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "package",
    "declaration": true,
    "declarationDir": "types",
    "paths": {
      "respvis-core": ["./src/ts/respvis-core"],
      "respvis-core/*": ["./src/ts/respvis-core/*"],
      "respvis-bar": ["./src/ts/respvis-bar"],
      "respvis-bar/*": ["./src/ts/respvis-bar/*"],
      "respvis-cartesian": ["./src/ts/respvis-cartesian"],
      "respvis-cartesian/*": ["./src/ts/respvis-cartesian/*"],
      "respvis-line": ["./src/ts/respvis-line"],
      "respvis-line/*": ["./src/ts/respvis-line/*"],
      "respvis-parcoord": ["./src/ts/respvis-parcoord"],
      "respvis-paracoord/*": ["./src/ts/respvis-parcoord/*"],
      "respvis-point": ["./src/ts/respvis-point"],
      "respvis-point/*": ["./src/ts/respvis-point/*"],
      "respvis-tooltip": ["./src/ts/respvis-tooltip"],
      "respvis-tooltip/*": ["./src/ts/respvis-tooltip/*"]
    }
  },
  "include": ["src/**/*", "module-specs.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/storybook/**/*"]
}
