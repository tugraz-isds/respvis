{
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["ES2015", "ES2019.Array", "DOM"],
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "package",
    "declaration": true,
    "declarationDir": "types",
    "paths": {
      "respvis-core": ["./src/ts/respvis-core/ts"],
      "respvis-core/*": ["./src/ts/respvis-core/ts/*"],
      "respvis-bar": ["./src/ts/respvis-bar/ts"],
      "respvis-bar/*": ["./src/ts/respvis-bar/ts/*"],
      "respvis-cartesian": ["./src/ts/respvis-cartesian/ts"],
      "respvis-cartesian/*": ["./src/ts/respvis-cartesian/ts/*"],
      "respvis-line": ["./src/ts/respvis-line/ts"],
      "respvis-line/*": ["./src/ts/respvis-line/ts/*"],
      "respvis-parcoord": ["./src/ts/respvis-parcoord/ts"],
      "respvis-paracoord/*": ["./src/ts/respvis-parcoord/ts/*"],
      "respvis-point": ["./src/ts/respvis-point/ts"],
      "respvis-point/*": ["./src/ts/respvis-point/ts/*"],
      "respvis-tooltip": ["./src/ts/respvis-tooltip/ts"],
      "respvis-tooltip/*": ["./src/ts/respvis-tooltip/ts/*"]
    }
  },
  "include": ["src/**/*", "module-specs.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/storybook/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
