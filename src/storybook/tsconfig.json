{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "paths": {
      "respvis-core": ["../packages/respvis-core/ts"],
      "respvis-core/*": ["../packages/respvis-core/ts/*"],
      "respvis-bar": ["../packages/respvis-bar/ts"],
      "respvis-bar/*": ["../packages/respvis-bar/ts/*"],
      "respvis-cartesian": ["../packages/respvis-cartesian/ts"],
      "respvis-cartesian/*": ["../packages/respvis-cartesian/ts/*"],
      "respvis-line": ["../packages/respvis-line/ts"],
      "respvis-line/*": ["../packages/respvis-line/ts/*"],
      "respvis-parcoord": ["../packages/respvis-parcoord/ts"],
      "respvis-parcoord/*": ["../packages/respvis-parcoord/ts/*"],
      "respvis-point": ["../packages/respvis-point/ts"],
      "respvis-point/*": ["../packages/respvis-point/ts/*"],
      "respvis-tooltip": ["../packages/respvis-tooltip/ts"],
      "respvis-tooltip/*": ["../packages/respvis-tooltip/ts/*"],
      "data": ["./stories/util/data"],
      "data/*": ["./stories/util/data/*"],
      "storybook-util": ["./stories/util"],
      "storybook-util/*": ["./stories/util/*"]
    }
  },
  "include": [
    "./stories/**/*",
    "../../declarations/*.d.ts",
    "./vite-env.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/package"]
}
